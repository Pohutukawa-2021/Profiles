<div class="user-box">
    <p>Create New Team Member</p>
    <form action="" method="POST">
        <div class="text-input">
            <label for="first-name">First Name:</label><br>
            <input type="text" id="first-name" name="first-name">
        </div>
        <div class="text-input">
            <label for="last-name">Last Name:</label><br>
            <input type="text" id="last-name" name="last-name">
        </div>
        <div class="text-input">
            <label for="birthplace">Place of Birth:</label><br>
            <input type="text" id="birthplace" name="birthplace">
        </div>
        <div class="text-input">
            <label for="bio">Bio:</label><br>
            <textarea id="bio" name="bio" rows="2" cols="40"></textarea>
        </div>
        <div class="text-input">
            <label for="profile-image">Profile Pic:</label><br>
            <input type="text" id="profile-image" name="profile-image"
                placeholder="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.basketballinsiders.com%2Fgrizzlies">
        </div>
        <div id="submit-form">
            <button>Create</button>
        </div>
    </form>
</div>

